
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Big Data Neo4j</title>
</head>

<body>
    <button class="btn btn-primary" onclick="location.href='/movie'">
        Agregar pelicula.
    </button>
    <button class="btn btn-primary" onclick="location.href='/actorNew'">
        Agregar Actor.
    </button>
    <button class="btn btn-primary" onclick="location.href='/elenco'">
        Agregar Elenco
    </button>
    <h1>Peliculas</h1>
    <table class="table" id="table">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nombre</th>
              <th scope="col">Año</th>
              <th scope="col">Descripción</th>
            </tr>
          </thead>
        <tbody>
            <% movies.forEach(function(movie){ %>
                <tr>
                    <td scope="row"><%= movie.id %></td>
                    <td><%= movie.title %></td>
                    <td><%= movie.year %></td>
                    <td><%= movie.description %></td>
                    <td><a href="/delete/<%= movie.id %>">Eliminar</a></td>
                    <td><a href="/movie/edit/<%= movie.id %>">Modificar</a></td>
                    <td><a href="/actor/<%= movie.id %>">Actores</a></td>
                </tr>
            <% }) %>
        </tbody>

    </table>
    <script>
        document.getElementById("table");
        function getRow(x){
            alert(x.rowIndex);
        }

    </script>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
        integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
        integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
        crossorigin="anonymous"></script>
</body>

</html>